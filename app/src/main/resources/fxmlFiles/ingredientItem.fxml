<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="36.0" prefWidth="221.0" style="-fx-background-color: ffa9a9;" styleClass="recipeAnchorStyle" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.IngredientItemController">
    <children>
        <HBox alignment="CENTER" prefHeight="34.0" prefWidth="219.0" spacing="3.0">
            <children>
                <Label fx:id="ingredientLbl" prefHeight="24.0" prefWidth="166.0" styleClass="jfx-text-field" stylesheets="@style.css" text="Beef">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Label>
            <ImageView fitHeight="26.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/ic_cart.png" />
               </image>
            </ImageView>
            <Label fx:id="amount" prefHeight="17.0" prefWidth="28.0" />
            <Button mnemonicParsing="false" onMousePressed="#addToCartClick" prefHeight="9.0" prefWidth="18.0" style="-fx-background-color: FED700;" styleClass="recipeAnchorStyle" stylesheets="@style.css" text="+">
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
