<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="36.0" prefWidth="221.0" style="-fx-background-color: ffa9a9;" styleClass="recipeAnchorStyle" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.IngredientsNeededController">
    <children>
        <HBox alignment="CENTER" prefHeight="34.0" prefWidth="218.0" spacing="3.0">
            <children>
                <AnchorPane prefHeight="24.0" prefWidth="23.0">
                    <HBox.margin>
                        <Insets bottom="5.0" top="6.0" />
                    </HBox.margin>
                    <children>
                        <ImageView fx:id="ingredientButton" fitHeight="25.0" fitWidth="22.0" onMousePressed="#ingredentClick" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/uncheck.png" />
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>
                <Label fx:id="ingredientLbl" prefHeight="24.0" prefWidth="78.0" text="Beef">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Label>
            <Button fx:id="minus" mnemonicParsing="false" prefHeight="26.0" prefWidth="26.0" text="-">
               <HBox.margin>
                  <Insets top="1.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="countLbl" alignment="CENTER" prefHeight="17.0" prefWidth="22.0" text="0" />
            <Button fx:id="plus" mnemonicParsing="false" prefHeight="18.0" prefWidth="11.0" text="+">
               <HBox.margin>
                  <Insets top="1.0" />
               </HBox.margin>
            </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
