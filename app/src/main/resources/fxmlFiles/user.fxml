<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="89.0" prefWidth="715.0" style="-fx-background-color: ffa9a9;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UserController">
    <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="715.0" spacing="5.0">
         <children>
              <Label fx:id="userNameLbl" prefHeight="32.0" prefWidth="107.0" styleClass="black" stylesheets="@style.css" text="Name">
                  <font>
                      <Font size="21.0" />
                  </font>
                  <padding>
                      <Insets top="5.0" />
                  </padding>
              </Label>
            <Label fx:id="nicknameLbl" prefHeight="32.0" prefWidth="103.0" styleClass="black" stylesheets="@style.css" text="nickname">
               <font>
                  <Font size="21.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label fx:id="emailLbl" prefHeight="32.0" prefWidth="196.0" styleClass="black" stylesheets="@style.css" text="Email">
               <font>
                  <Font size="21.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label fx:id="passwordLbl" prefHeight="32.0" prefWidth="140.0" styleClass="black" stylesheets="@style.css" text="Password">
               <font>
                  <Font size="21.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
              <Button fx:id="editUser" mnemonicParsing="false" onMousePressed="#edit" prefHeight="32.0" prefWidth="68.0" style="-fx-background-color: FED700;" text="Edit" />
              <Button fx:id="removeUser" mnemonicParsing="false" onMousePressed="#remove" prefHeight="32.0" prefWidth="64.0" style="-fx-background-color: FED700;" text="Remove" />
         </children>
      </HBox>
    </children>
    <styleClass>
        <String fx:value="recipeAnchorStyle" />
        <String fx:value="transparent" />
    </styleClass>
</AnchorPane>
