    <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="715.0" spacing="5.0">
         <children>
            <TextArea prefHeight="41.0" prefWidth="76.0" promptText="Name">
               <HBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </HBox.margin>
            </TextArea>
            <TextArea prefHeight="41.0" prefWidth="91.0" promptText="nickName">
               <HBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <TextArea prefHeight="41.0" prefWidth="169.0">
               <HBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </HBox.margin>
            </TextArea>
            <TextArea prefHeight="41.0" prefWidth="161.0" promptText="password">
               <HBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </HBox.margin>
