         <children>
            <ImageView fx:id="image" fitHeight="126.0" fitWidth="175.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
               <image>
                  <Image url="@../recipeImages/banana-pancakes.png" />
